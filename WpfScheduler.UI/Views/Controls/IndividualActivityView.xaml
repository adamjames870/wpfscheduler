<UserControl x:Class="WpfSchedulerAdam.Views.Controls.ActivityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfSchedulerAdam.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border 
        BorderBrush="DodgerBlue" BorderThickness="2" 
        Background="LightBlue" Margin="3" CornerRadius="3">
        <StackPanel>
            <TextBlock Margin="3, 0, 0, 0" FontWeight="Bold" Text="{Binding Title}" />
        </StackPanel>
    </Border>
</UserControl>
